<% layout('../layouts/app') -%>

<div id="searchNews" class="container py-5">
    <div class="align-middle d-flex w-100 justify-content-between mb-3 head">
        <h3 class="m-0" data-id="<%= data.search %>">Search News: <%= data.search %></h3>
        <!-- <select role="button" class="form-control form-control-sm" id="category" name="category">
            <option value="0">Select category</option>
            <option>Politic</option>
            <option>Tech</option>
        </select> -->
    </div>
    <div class="list-group">
        <% if (news.length > 0) { %>
            <% for (var i = 0; i < news.length; i++) { %>
                <a href="/news/get?id=<%= news[i]._id %>" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1"><u><%= news[i].title %></u></h5>
                    </div>
                    <p class="mb-1"><%= news[i].description %></p>
                </a>
            <% } %>
        <% } else { %>
            <p class="text-center">- No News! -</p>
        <% } %>
    </div>
</div>
